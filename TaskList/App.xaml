<Application 
    x:Class="TaskList.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone">

    <!--Application Resources-->
    <Application.Resources>
        <SolidColorBrush x:Key="BlueFontKey">DeepSkyBlue</SolidColorBrush>
        <SolidColorBrush x:Key="DarkGrayBrushKey">#FF2F2F31</SolidColorBrush>
        <SolidColorBrush x:Key="WhiteBrushKey">Snow</SolidColorBrush>
        <SolidColorBrush x:Key="BluePvoitKey">DodgerBlue</SolidColorBrush>
        <TextBlock x:Key="APP_ID" Text="e55f9961e0e7461d" />
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Required object that handles lifetime events for the application-->
        <shell:PhoneApplicationService 
            Launching="Application_Launching" Closing="Application_Closing" 
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>

</Application>